<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceApplication.views.ListPage">
    

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="TextOpenSans" TargetType="Label">
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontFamily" Value="OpenSans-Regular"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <AbsoluteLayout BackgroundColor="#F5F5F5" Padding="0">
        <Grid AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" >
            <Grid.RowDefinitions>
                <RowDefinition Height=".08*"/>
                <RowDefinition Height=".08*"/>
                <RowDefinition Height=".08*"/>
                <RowDefinition Height=".07*"/>
                <RowDefinition Height=".07*"/>
                <RowDefinition Height=".1*"/>
                <RowDefinition Height=".385*"/>
                <RowDefinition Height=".07*"/>
                <RowDefinition Height=".065*"/>
                
            </Grid.RowDefinitions>

            <Frame Grid.Column="0" Grid.Row="0" Padding="0, 10, 0, 10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".05*"/>
                        <ColumnDefinition Width=".4*"/>
                        <ColumnDefinition Width=".45*"/>
                        <ColumnDefinition Width=".1*"/>
                    </Grid.ColumnDefinitions>

                    <Label Text="Transactions" Grid.Column="1"  VerticalOptions="Center" Grid.Row="0" Style="{StaticResource TextOpenSans}" />

                    <Button x:Name="date" CornerRadius="25" BackgroundColor="#F4F4F4" Grid.Column="2" Grid.Row="0" Padding="0" HorizontalOptions="End" FontSize="Micro" TextColor="Black" VerticalOptions="Center" Text="" Clicked="ToDatePage"></Button>

                    <!--<Image Grid.Row="0" Grid.Column="2">-->
                </Grid>
            </Frame>

            <Label Margin="15, 0,0,0" Style="{StaticResource TextOpenSans}" Grid.Column="0" Grid.Row="1" VerticalOptions="End" FontSize="Medium" Text="Total balance"/>
            <!--<Label Margin="15, 0,0,0" Style="{StaticResource TextOpenSans}" Grid.Column="0" Grid.Row="2" FontSize="32" Text="{Binding totalBalance}"/>-->
            <Label x:Name="total" Margin="15, 0,0,0" Style="{StaticResource TextOpenSans}" Grid.Column="0" Grid.Row="2" FontSize="32" />



            <Frame Grid.Column="0" Grid.Row="3" Padding="10" Margin="15, 0, 15, 0" CornerRadius="10">
                <Grid Padding="0,0,10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".1*"/>
                        <ColumnDefinition Width=".5*"/>
                        <ColumnDefinition Width=".4*"/>
                    </Grid.ColumnDefinitions>

                    <!--<Image Grid.Row="0" Grid.Column="0"/>-->

                    <Label Style="{StaticResource TextOpenSans}" Text="Increase" Grid.Row="0" VerticalTextAlignment="Center" Grid.Column="1"/>
                    <Label Style="{StaticResource TextOpenSans}" Text="$500" HorizontalOptions="End" Grid.Row="0" Grid.Column="2" VerticalTextAlignment="Center" TextColor="#20CB3B"/>
                </Grid>
            </Frame>
            
            
            <Frame Grid.Column="0" Grid.Row="4" Padding="10" Margin="15, 0, 15, 0" CornerRadius="10">
                <Grid Padding="0,0,10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width=".1*"/>
                        <ColumnDefinition Width=".5*"/>
                        <ColumnDefinition Width=".4*"/>
                    </Grid.ColumnDefinitions>

                    <!--<Image Grid.Row="0" Grid.Column="0"/>-->

                    <Label Style="{StaticResource TextOpenSans}" Text="Expenses" Grid.Row="0" Grid.Column="1" VerticalTextAlignment="Center"/>
                    <Label Style="{StaticResource TextOpenSans}" Text="$500" HorizontalOptions="End" Grid.Row="0" Grid.Column="2" VerticalTextAlignment="Center" TextColor="Red"/>
                </Grid>
            </Frame>

            <Label Style="{StaticResource TextOpenSans}" Text="Spending calendar" Grid.Column="0" Grid.Row="5" Margin="15, 0, 15, 0" VerticalOptions="Center"/>

            <CollectionView Grid.Row="6" Grid.Column="0" x:Name="OperationsCollection">
                <CollectionView.ItemTemplate >
                    <DataTemplate>
                        <StackLayout>
                            <Frame BackgroundColor="White" Margin="10, 12, 10, 0">
                                <StackLayout>
                                    <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand" HeightRequest="45" Padding="0,0,0,0">
                                        <Label Text="{Binding Day}" WidthRequest="35" Style="{StaticResource TextOpenSans}" FontAttributes="Bold" FontSize="Title"/>
                                        <Grid >
                                            <Grid.ColumnDefinitions Padding="0">
                                                <ColumnDefinition Width=".3*" />
                                                <ColumnDefinition Width=".6*" />
                                                <ColumnDefinition Width=".1*"/>
                                            </Grid.ColumnDefinitions >
                                            <Grid.RowDefinitions Padding="0">
                                                <RowDefinition Height=".5*"/>
                                                <RowDefinition Height=".5*"/>
                                            </Grid.RowDefinitions>
                                            <Label Text="{Binding Year}" Grid.Column="0" Grid.Row="0" Style="{StaticResource TextOpenSans}" FontSize="Default"/>
                                            <Label Text="{Binding Month}" Grid.Column="0" Grid.Row="1" Style="{StaticResource TextOpenSans}" FontSize="Default"/>

                                            <Label Text="{Binding WalletName}" Grid.Column="1" Grid.Row="0" Style="{StaticResource TextOpenSans}" FontSize="Default"/>
                                            <Label Text="{Binding WalletType}" Grid.Column="1" Grid.Row="1" Style="{StaticResource TextOpenSans}" FontSize="Default"/>

                                            <Label x:Name="sum" Style="{StaticResource TextOpenSans}" Text="{Binding Sum, StringFormat='${0}'}" HorizontalOptions="End" Grid.Row="0" Grid.Column="2" VerticalTextAlignment="Center"/>
                                        </Grid>
                                    </StackLayout>
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Frame x:Name="NoOperations"  Grid.Row="7" Grid.Column="0" Padding="0">
                <Label Text="you have no operations yet" TextColor="Black"/>
            </Frame>

            <Frame BackgroundColor="White" Grid.Row="8" Grid.Column="0" Padding="3">
                <Grid>

                    <Image x:Name="imageCard" Grid.Column="0" Grid.Row="0">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ToCardPage" />
                        </Image.GestureRecognizers>
                    </Image>

                    <Image x:Name="imageCathegory" Grid.Column="1" Grid.Row="0">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ToCardPage" />
                        </Image.GestureRecognizers>
                    </Image>

                    <Image x:Name="imageList" Grid.Column="2" Grid.Row="0">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ToCardPage" />
                        </Image.GestureRecognizers>
                    </Image>

                    <Image x:Name="imageDiagram" Grid.Column="3" Grid.Row="0">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ToCardPage" />
                        </Image.GestureRecognizers>
                    </Image>

                    <Image x:Name="imageConverter" Grid.Column="4" Grid.Row="0">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ToCardPage" />
                        </Image.GestureRecognizers>
                    </Image>


                </Grid>
            </Frame>
            
        </Grid>
        <Frame x:Name="PlusButton" BackgroundColor="Transparent" Padding="0" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds=".9, .9, 50, 50" CornerRadius="30">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ToCardPage" />
            </Frame.GestureRecognizers>
            <Label Text="+" FontSize="24" VerticalOptions="Center" HorizontalOptions="Center" />
        </Frame>

    </AbsoluteLayout>
</ContentPage>
    